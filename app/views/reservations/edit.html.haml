-title "Editing reservation"

.reservations_box
  .fancy.title
    Edit reservation #
    = current_object.id

  = error_messages_for :reservation

  - form_for(:reservation, :url => object_url, :html => { :method => :put }) do |f|
    = render :partial => "form", :locals => {:f => f}
    %p= submit_tag "Update"
  .edit
    = link_to 'Show', object_path
    |
    = link_to 'Back', objects_path
