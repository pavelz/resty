!!!
%head
  = stylesheet_link_tag 'compiled/terminal.css', :media => 'screen, projection'
  = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
  = stylesheet_link_tag 'compiled/print.css', :media => 'print'
  
  = javascript_include_tag 'mt12c','mt12p','strftime-1.3','cufon-yui', 'Space_Age_400.font','Champagne__Limousines_200.font','tmnl','ddr'
  = yield :head
  %script{ :type=>'text/javascript' }
    window.addEvent('domready',function(ev){
    Cufon.replace('.title,.text,.address > .head',{'fontFamily':'Space Age'} );
    Cufon.replace('.fancy,.today_box > .head,ul.drinks_list li,.food_menu > .head,.food_menu li ,ul.menu li,.address > .line',{'fontFamily':'Champagne & Limousines'} );
    })
    DD_roundies.addRule('.countdown_box','10px 0px 0px 10px',true)
    DD_roundies.addRule('.rounded','20px',true)
    DD_roundies.addRule('.rounded_sm','10px',true)
  %title
    = yield :title
%body#body
  -link_to root_url do
    .title_logo
      =image_tag "/images/terminal_logo.png"

  .container
    .contact_bar
      -link_to today_url do
        .item.last
          .text
            TODAY
      -link_to games_url do
        .item
          .text
            SOCCER
      -link_to events_url do
        .item
          .text
            EVENTS
      -link_to about_url do
        .item
          .text
            ABOUT US
    .main_area.rounded
      .menu_box
        %ul.menu
          - link_to events_path do
            %li><
              Current Events
          - link_to menu_path do
            %li><
              Food Menu
          - link_to martinis_path do
            %li><
              Martini List
          - link_to wines_path do
            %li><
              Wine List
          - link_to photos_path do
            %li><
              Pictures
          - link_to contact_path do
            %li><
              Location
          - link_to new_reservation_path do
            %li><
              Reservations

        - link_to '/games' do
          .countdown_box><
            = image_tag "/images/fifa_box.png"
            #countdown
        - link_to '/games' do
          .games_box
            %ul
              %li
                .big
                  LIVE
                Televised Games
              %li
                .big
                  Full 
                .fifa_color
                  FIFA 2010
                Coverage
      .content
        =yield
