%p
  %label{:for => "album_name"} Name:
  = f.text_field :name
%p
  %label{:for => "album_taken_when"} Date:
  = f.datetime_select :taken_when
%p
  %label{:for => "album_event_id"} Event:
  = f.select :event_id , Event.find(:all).map { |e| [e.title, e.id] } ,{:include_blank=>true}
%p
  %label{:for => "album_flickr_tag"} Flickr Tag:
  = f.text_field :flickr_tag

